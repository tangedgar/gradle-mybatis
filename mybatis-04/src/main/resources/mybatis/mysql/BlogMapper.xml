<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tanghui04.dao.BlogMapper">
    <insert id="addBlog" parameterType="com.tanghui04.model.Blog">
        insert into blog (id,title,author,create_time,views)
        values (#{id},#{title},#{author},#{createtime},#{views});
    </insert>

    <select id="queryblogif" parameterType="map" resultType="com.tanghui04.model.Blog">
        select * from blog where 1=1
        <if test="title != null">
            and title = #{title}
        </if>
        <if test="author != null">
            and author = #{author}
        </if>
    </select>
</mapper>